    <!doctype html>
    <html>
    <head>
        <title><%= shopName %> - Customer Survey</title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <h1><%= shopName %> Customer Survey</h1>
        <p>Please fill in the details below to help us learn more about our customers.</p>

        <form action="/survey_submitted" method="POST">
        <div class="form-row">
            <label for="first">First Name:</label>
            <input id="first" type="text" name="first" required>
        </div>

        <div class="form-row">
            <label for="last">Surname:</label>
            <input id="last" type="text" name="last" required>
        </div>

        <div class="form-row">
            <label for="email">Email:</label>
            <input id="email" type="email" name="email" required>
        </div>

        <div class="form-row">
            <label for="age">Age:</label>
            <input id="age" type="text" name="age" required>
        </div>

        <div class="form-row">
            <label class="block-label">Which of the following drinks categories do you consume?</label>
            <div class="options-col">
            <% productCategories.forEach(function(category) { %>
                <label class="option-line">
                <input type="checkbox" name="categories" value="<%= category %>">
                <span><%= category %></span>
                </label>
            <% }); %>
            </div>
        </div>


        <input type="submit" value="Submit Survey">

        </form>
    </body>
    </html>